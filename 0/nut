    }

    x1
    {
        type            symmetry;
    }

    sky
    {
        type            symmetry;
    }

        Buildings
    {
        type            nutkWallFunction;
	value		uniform 0;
    }
    
     Water
    {
        type            nutkAtmRoughWallFunction;
        value           uniform 0;
	z0		$z0water;
    }
      Trees
    {
