FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleTransportFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         3002;

deltaT          1;

writeControl    timeStep;

writeInterval   100;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

// adjustTimeStep  yes;

// maxCo           1;

libs ("libatmosphericModels.so" "libfieldFunctionObjects.so");

functions
{
    #includeFunc residuals

    yPlus1
    {
        type            yPlus;
        libs            ("libfieldFunctionObjects.so");
        writePrecision  6;
        writeToFile     true;
        log             true;
        executeControl  timeStep;
        writeControl    timeStep;
        writeInterval   100;
    }
}
